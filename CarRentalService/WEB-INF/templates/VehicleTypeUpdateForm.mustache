<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="page-header">
	<h1>Update vehicle type</h1>
</div>
<div>{{{alerts}}}</div>
<form role="form" method="POST" action={{base_url}}/vehicletype/update?uid={{uid}}>

  <div class="form-group">
    <label class="col-sm-2 control-label">UID</label>
      <p class="form-control-static">{{uid}}</p>
  </div>

  <div class="form-group">
    <label for="typeName">Name</label>
    <input type="text" class="form-control" id="typeName" name="typeName" placeholder="Enter type name" value="{{name}}">
  </div>
  
  <div class="form-group">
    <label for="typeDailyRate">Daily rate</label>
    <input type="number" class="form-control" id="typeDailyRate" name="typeDailyRate" placeholder="10.00" step="0.01" value="{{daily_rate}}">
  </div>
  
  <div class="form-group">
    <label for="typeHourlyRate">Hourly rate</label>
    <input type="number" class="form-control" id="typeHourlyRate" name="typeHourlyRate" placeholder="10.00" step="0.01" value="{{hourly_rate}}">
  </div>

  <button type="submit" class="btn btn-primary pull-right">Update</button>
</form>
</div>
</div>