<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1>Service Management</h1>
		</div>
		{{{alerts}}}
	</div>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<form role="form" method="POST" action={{base_url}}/service>
		  
		  <div class="form-group">
		    <label for="serviceFee">Service membership fee</label>
		    <input type="number" class="form-control" id="serviceFee" name="serviceFee" placeholder="10.00" step="0.01" value={{fee}}>
		  </div>
		
		  <button type="submit" class="btn btn-default pull-right">Apply changes</button>
		</form>
	</div>
</div>